@model ListPokemonsModel
@{
    ViewData["Title"] = "Listado de Pokémon";
}

<h2>Listado de Pokémon</h2>

<a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.Previous" class="btn btn-primary btn-sm">Anterior</a>
<a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.Next" class="btn btn-primary btn-sm">Siguiente</a>

@if (Model.Results.Any())
{
    <div class="pokemon-grid">
        @foreach (var p in Model.Results)
        {
            <div class="pokemon-card">
                <img src="@p.ImageUrl" alt="@p.Name" />
                <div class="pokemon-name">@p.Name</div>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Exportar Excel</a>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Envio Correo</a>
            </div>
        }
    </div>
}
else
{
    <p>No hay pokémon para mostrar.</p>
}

<style>
    .pokemon-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .pokemon-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        text-align: center;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }

    .pokemon-card img {
        max-width: 100%;
        height: auto;
    }

    .pokemon-name {
        font-weight: bold;
        margin-top: 10px;
        text-transform: capitalize;
    }
</style>
