@model ListPokemonsModel
@{
    ViewData["Title"] = "Listado de Pokémon";
}

<h2>Listado de Pokémon</h2>

<div class="d-flex justify-content-between mb-3">
    <div>
        <form asp-action="Index" asp-controller="Home" method="get" class="form-inline mb-3">
            <div class="input-group">
                <input type="text" name="nameFilter" class="form-control" placeholder="Nombre del Pokémon..." />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.Previous" class="btn btn-primary btn-sm">Anterior</a>
        <a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.Next" class="btn btn-primary btn-sm">Siguiente</a>
    </div>
    <div>
        <form asp-action="ExportToExcel" asp-controller="Home" method="post" class="ms-auto">
            @foreach (var p in Model.Results)
            {
                <input type="hidden" name="Pokemons[@Model.Results.IndexOf(p)].Name" value="@p.Name" />
                <input type="hidden" name="Pokemons[@Model.Results.IndexOf(p)].Url" value="@p.Url" />
            }
            <button type="submit" class="btn btn-success btn-sm">Exportar a Excel</button>
        </form>
    </div>
</div>


@if (Model.Results.Any())
{
    <div class="pokemon-grid">
        @foreach (var p in Model.Results)
        {
            <div class="pokemon-card">
                <img src="@p.ImageUrl" alt="@p.Name" />
                <div class="pokemon-name">@p.Name</div>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Detalles</a>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Envio Correo</a>
            </div>
        }
    </div>
}
else
{
    <p>No hay pokémon para mostrar.</p>
}

<style>
    .pokemon-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .pokemon-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        text-align: center;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }

    .pokemon-card img {
        max-width: 100%;
        height: auto;
    }

    .pokemon-name {
        font-weight: bold;
        margin-top: 10px;
        text-transform: capitalize;
    }
</style>
