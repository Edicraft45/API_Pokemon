@model PokemonVM
@{
    ViewData["Title"] = "Listado de Pokémon";
}

<h2>Listado de Pokémon</h2>

<!-- Filtros (Nombre + Tipo + Buscar) -->
<div class="container mb-3">
    <div class="row g-2 align-items-center">
        <!-- Formulario de búsqueda por nombre -->
        <div class="col-md-5">
            <form asp-action="Index" asp-controller="Home" method="get" class="d-flex">
                <input type="text" name="nameFilter" class="form-control me-2" placeholder="Nombre del Pokémon..." />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>

        <!-- Formulario de filtrado por tipo (envía automáticamente al cambiar) -->
        <div class="col-md-4">
            <form asp-action="Index" asp-controller="Home" method="get">
                <select id="typeFilter" name="selectedType" class="form-select" onchange="this.form.submit()">
                    <option value="">Todos los tipos</option>
                    @foreach (var type in Model.pokemonsType)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
            </form>
        </div>
    </div>
</div>


<!-- Botones: Paginación + Exportar -->
<div class="container d-flex justify-content-between align-items-center">
    <!-- Paginación -->
    <div>
        <a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.listPokemonsModel.Previous" class="btn btn-outline-primary btn-sm">← Anterior</a>
        <a asp-action="PaginatedPokemons" asp-controller="Home" asp-route-url="@Model.listPokemonsModel.Next" class="btn btn-outline-primary btn-sm">Siguiente →</a>
    </div>

    <!-- Exportar a Excel -->
    <form asp-action="ExportToExcel" asp-controller="Home" method="post" class="d-inline">
        @for (int i = 0; i < Model.listPokemonsModel.Results.Count; i++)
        {
            <input type="hidden" name="Pokemons[@i].Name" value="@Model.listPokemonsModel.Results[i].Name" />
            <input type="hidden" name="Pokemons[@i].Url" value="@Model.listPokemonsModel.Results[i].Url" />
        }
        <button type="submit" class="btn btn-success btn-sm">Exportar a Excel</button>
    </form>
</div>



@if (Model.listPokemonsModel.Results.Any())
{
    <div class="pokemon-grid">
        @foreach (var p in Model.listPokemonsModel.Results)
        {
            <div class="pokemon-card">
                <img src="@p.ImageUrl" alt="@p.Name" />
                <div class="pokemon-name">@p.Name</div>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Detalles</a>
                <a asp-action="GetPokemon" asp-controller="Home" asp-route-n="@p.Id" class="btn btn-outline-primary btn-sm">Envio Correo</a>
            </div>
        }
    </div>
}
else
{
    <p>No hay pokémon para mostrar.</p>
}

<style>
    .pokemon-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .pokemon-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        text-align: center;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }

    .pokemon-card img {
        max-width: 100%;
        height: auto;
    }

    .pokemon-name {
        font-weight: bold;
        margin-top: 10px;
        text-transform: capitalize;
    }
</style>
